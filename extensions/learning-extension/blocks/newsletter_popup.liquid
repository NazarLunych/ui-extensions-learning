          </div>
        </div>
      {% endunless %}
    </div>
  </div>
{% endform %}

<link rel="stylesheet" href="{{ 'newsletter_popup.css' | asset_url }}">

{% schema %}
{
  "name": "Newsletter popup",
  "target": "body",
  "javascript": "newsletter_popup.js",
  "settings": [
    {
      "type": "select",
      "id": "cookie_time",
      "label": "Cookie time",
      "options": [
        {
          "value": "1 day",
          "label": "1 day"
        },
        {
          "value": "1 week",
          "label": "1 week"
        },
        {
          "value": "1 month",
          "label": "1 month"
        },
        {
          "value": "3 months",
          "label": "3 months"
        },
        {
          "value": "1 year",
          "label": "1 year"
        }
      ]
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Text",
      "default": "Text..."
    },
    {
      "type": "text",
      "id": "input_label",
      "label": "Input label"
    },
    {
      "type": "text",
      "id": "input_placeholder",
      "label": "Input placeholder",
      "default": "john.smith@example.com"
    },
    {
      "type": "text",
      "id": "button_submit_label",
      "label": "Button submit label"
    },
    {
      "type": "text",
      "id": "button_close_label",
      "label": "Button close label",
      "default": "No thanks"
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Image desktop"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image mobile"
    },
    {
      "type": "checkbox",
      "id": "show_socials",
      "label": "Show socials",
      "default": true
    }
  ]
}
{% endschema %}
